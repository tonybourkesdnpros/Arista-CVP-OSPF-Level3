CVP_DEVICES_EVPN:

{% for host in underlay['devices'] %}
{% if host != 'global' %}
  - fqdn: '{{host}}'
{% if 'leaf' in host %}
    parentContainerName: 'Leaf'
{% endif %}
{% if 'spine' in host %}
    parentContainerName: 'Spine'
{% endif %}
    configlets:
      - 'ATD-INFRA'
      - '{{ host }}-base'
      - '{{ host }}_EVPN_underlay'
      - '{{ host }}_interface'
{% if 'leaf' in host %}
      - '{{ host }}_VXLAN'
{% if 'Odd' in underlay['devices'][host]['MLAG']%}
      - 'MLAG-Left'
{%endif%}
{% if 'Even' in underlay['devices'][host]['MLAG']%}
      - 'MLAG-Right'
{%endif%}
{%endif%}
{% endif %}
{% endfor %}
